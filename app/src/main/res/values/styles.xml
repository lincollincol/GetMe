<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_background_circle_get_me</item>
        <item name="colorPrimaryDark">@color/color_background_ripple_get_me</item>
        <item name="colorAccent">@color/color_background_circle_get_me</item>
        <item name="android:windowBackground">@color/color_background_default_get_me</item>
    </style>

    <style name="GetMeExampleButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_background_circle_get_me</item>
        <item name="android:textColor">@color/color_background_icon_get_me</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <style name="GetMeCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="color_background_default_get_me">#FFCCB2</item>
        <item name="color_background_selected_get_me">#FFB4A2</item>
        <item name="color_background_ripple_get_me">#B4838D</item>
        <item name="color_background_circle_get_me">#E5989B</item>
        <item name="color_background_icon_get_me">#FFCCB2</item>
        <item name="color_text_get_me">#6D6875</item>
    </style>

</resources>
